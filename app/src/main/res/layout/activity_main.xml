<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/suerte"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_get_Lucky"
        android:textSize="20sp"
        android:textStyle="bold"
        android:letterSpacing=".10"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@color/green_2d6"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/resultado_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_result"
        android:textSize="15sp"
        android:textStyle="bold"
        android:letterSpacing="0.5"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textColor="@color/green_2d6"
        />

    <EditText
        android:id="@+id/nombre_Input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/main_name_Question"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/green_2d6"
        android:textColorHint="@color/green_2d6"
        />
    <EditText
        android:id="@+id/edad_Input"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/main_age_Question"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/green_2d6"
        android:textColorHint="@color/green_2d6"
        />
    <Button
        android:id="@+id/suerte_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_lucky_button"
        android:layout_margin="15dp"
        android:backgroundTint="@color/green_2d6"
        />

</LinearLayout>